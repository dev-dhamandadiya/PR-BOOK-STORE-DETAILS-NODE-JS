<%- include('partials/header') %>

<header class="hero-section text-white d-flex align-items-center">
    <div class="container text-center">
        <div class="hero-content py-5">
            <h1 class="display-2 fw-bold mb-3 main-title">The Velvet Spine</h1>
            <p class="lead mb-4 opacity-75">Curated Archives of Fictional Masterpieces</p>
            <div class="d-flex justify-content-center gap-3">
                <a href="#collection" class="btn btn-light btn-lg rounded-pill px-5 shadow">Explore Archive</a>
                <a href="/add-book" class="btn btn-outline-light btn-lg rounded-pill px-5">Add New Book</a>
            </div>
        </div>
    </div>
</header>

<main class="container my-5" id="collection">
    <div class="d-flex justify-content-between align-items-end mb-5">
        <div>
            <h2 class="fw-bold section-title">Recently Added</h2>
            <div class="title-underline"></div>
        </div>
        <a href="/view-book" class="text-decoration-none text-velvet fw-bold">View All <i class="bi bi-arrow-right"></i></a>
    </div>

    <div class="row g-4">
        <% if (typeof books !== 'undefined' && books.length > 0) { %>
            <% books.forEach(book => { %>
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="card book-card h-100 border-0 shadow-hover">
                        <div class="image-wrapper position-relative">
                            <img src="/<%= book.bookImage %>" class="card-img-top" alt="<%= book.title %>">
                            <div class="card-overlay d-flex flex-column justify-content-center align-items-center">
                                <a href="/edit-book/<%= book._id %>" class="btn btn-light btn-sm rounded-pill mb-2 px-3">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            </div>
                            <div class="price-badge">â‚¹<%= book.price %></div>
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold text-truncate mb-1"><%= book.title %></h5>
                            <p class="card-text text-muted small"><%= book.author %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12 text-center py-5">
                <i class="bi bi-journal-x display-1 text-muted"></i>
                <p class="mt-3 fs-5 text-muted">No books found in the collection.</p>
            </div>
        <% } %>
    </div>
</main>

<%- include('partials/footer') %>