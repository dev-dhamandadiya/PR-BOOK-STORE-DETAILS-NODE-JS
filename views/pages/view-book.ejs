<%- include('../partials/header') %>

    <main class="container my-5 pt-4">
        <div class="row mb-4 align-items-center">
            <div class="col-md-6">
                <h2 class="fw-bold main-title">Library Inventory</h2>
                <p class="text-muted small">Manage and update your archived titles.</p>
            </div>
            <div class="col-md-6 text-md-end">
                <a href="/add-book" class="btn btn-dark rounded-pill btn-sm px-4">
                    <i class="bi bi-plus-lg"></i> Add New
                </a>
            </div>
        </div>

        <div class="table-responsive shadow-sm rounded-4 border bg-white p-3">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr class="small text-secondary fw-bold">
                        <th class="ps-3">COVER</th>
                        <th>TITLE & AUTHOR</th>
                        <th>PRICE</th>
                        <th class="text-center">ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (books && books.length> 0) { %>
                        <% books.forEach(book=> { %>
                            <tr>
                                <td class="ps-3">
                                    <img src="/<%= book.bookImage %>" class="rounded shadow-sm"
                                        style="width: 45px; height: 60px; object-fit: cover;">
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">
                                        <%= book.title %>
                                    </div>
                                    <div class="text-muted small">
                                        <%= book.author %>
                                    </div>
                                </td>
                                <td class="fw-bold text-velvet">â‚¹<%= book.price %>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a href="/edit-book/<%= book._id %>"
                                            class="btn btn-outline-dark btn-sm rounded-start-pill px-3">
                                           Edit
                                        </a>
                                        <a href="/delete-book/<%= book._id %>"
                                            class="btn btn-outline-danger btn-sm rounded-end-pill px-3">
                                           Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center py-5 text-muted">No books found in the
                                            archive.</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </main>

    <%- include('../partials/footer') %>