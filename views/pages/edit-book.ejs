<%- include('../partials/header') %>

<div class="container my-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center mb-4">
                <h3 class="fw-bold main-title">Refine Details</h3>
                <p class="text-muted small">Updating: <strong><%= book.title %></strong></p>
            </div>

            <div class="p-4 shadow-sm border bg-white rounded-4">
                <form action="/edit-book/<%= book._id %>" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-secondary">BOOK TITLE</label>
                        <input type="text" name="title" value="<%= book.title %>" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label small fw-bold text-secondary">AUTHOR</label>
                        <input type="text" name="author" value="<%= book.author %>" class="form-control" required>
                    </div>

                    <div class="row mb-3 align-items-end">
                        <div class="col-6">
                            <label class="form-label small fw-bold text-secondary">PRICE (â‚¹)</label>
                            <input type="number" name="price" value="<%= book.price %>" class="form-control" step="0.01" required>
                        </div>
                        <div class="col-6 text-center">
                            <label class="form-label small fw-bold text-secondary d-block">CURRENT COVER</label>
                            <img src="/<%= book.bookImage %>" class="rounded mt-1 border" style="width: 50px; height: 70px; object-fit: cover;">
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label small fw-bold text-secondary">CHANGE COVER (OPTIONAL)</label>
                        <input type="file" name="bookImage" class="form-control">
                        <div class="form-text small">Leave empty to keep current cover.</div>
                    </div>

                    <button type="submit" class="btn btn-add w-100 py-2 fw-bold shadow-sm">
                        Update Archive Entry
                    </button>
                    
                    <div class="text-center mt-3">
                        <a href="/view-book" class="text-decoration-none small text-muted">Discard changes</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>